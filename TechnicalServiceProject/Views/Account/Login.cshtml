@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <partial name="_MetaStyles"></partial>
</head>
<body>

    <div class="card offset-4 col-4 border-primary" style="margin-top:20px;">
        <div class="card-body">

            <h1 class="text-primary text-center">Raijin</h1>

            <form>
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">Email adresi</label>
                    <input type="email" id="form2Example1" class="form-control" />
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example2">Şifre</label>
                    <input type="password" id="form2Example2" class="form-control" />
                </div>

                <!-- 2 column grid layout for inline styling -->
                <div class="row mb-4">
                    <div class="col d-flex justify-content-center">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                            <label class="form-check-label" for="form2Example31"> Beni hatırla </label>
                        </div>
                    </div>

                    <div class="col">
                        <!-- Simple link -->
                        <a href="#!">Şifremi untuttum</a>
                    </div>
                </div>

                <!-- Submit button -->
                <button type="button" class="col-4 offset-4 btn btn-primary btn-block mb-4">Giriş Yap</button>

                <!-- Register buttons -->
                <div class="text-center">
                    <p>Üye değil misin? <a href="#!">Kaydol</a></p>
                </div>
            </form>
        </div>
    </div>


    <partial name="_Scripts"></partial>
</body>
</html>