            <form asp-controller="Account" asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <label class="form-label" asp-for="Email">Email adresi</label>
                    <input type="email" asp-for="Email" class="form-control" />
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <label class="form-label" asp-for="Password">Şifre</label>
                    <input type="password" asp-for="Password" class="form-control" />
                </div>

                <!-- 2 column grid layout for inline styling -->
                <div class="row mb-4">
                    <div class="col d-flex justify-content-center">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                            <label class="form-check-label" for="form2Example31"> Beni hatırla </label>
                        </div>
                    </div>

                    <div class="col">
                        <!-- Simple link -->
                        <a href="#!">Şifremi untuttum</a>
                    </div>
                </div>

                <!-- Submit button -->
                <div class="form-footer">
                    <input type="submit" class="col-4 offset-4 btn btn-primary btn-block" style="margin-bottom: 10px;" value="Giriş Yap" />
                </div>
                <div class="text text-danger" asp-validation-summary="ModelOnly"></div>

                <!-- Register buttons -->
                <div class="text-center">
                    <p>Üye değil misin? <a asp-controller="Account" asp-action="Register">Kaydol</a></p>
                </div>
            </form>
        </div>
    </div>


    <partial name="_Scripts"></partial>
</body>
</html>